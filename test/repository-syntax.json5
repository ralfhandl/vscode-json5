{
    /* before key */ foo /* after key */: 'bar',
    while: /* before value */ true /* after value */,

    this: 'is a \
multi-line string',

    // this is an inline comment
    here: 'is another', // inline comment

    /* this is a block comment
       that continues on another line */

    hex: 0xDEADbeef,
    half: .5,
    delta: +10,
    to: Infinity,   // and beyond!

    finally: 'a trailing comma',
    oh: [ /* before item */
        "we shouldn't forget" /*after item */, /*before next item */
        'arrays can have',
        'trailing commas too',
    ],
}
